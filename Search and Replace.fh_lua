	tblCodePage["ä"] = "S"
	tblCodePage["ã"] = "<"
	tblCodePage["å"] = "OE"
	tblCodePage["\141"] = ""  -- Undefined
	tblCodePage["é"] = "Z"
	tblCodePage["\143"] = ""  -- Undefined
	tblCodePage["\144"] = ""  -- Undefined
	tblCodePage["ë"] = "'"
	tblCodePage["í"] = "'"
	tblCodePage["ì"] = '"'
	tblCodePage["î"] = '"'
	tblCodePage["ï"] = "∫"
	tblCodePage["ñ"] = "-"
